<mah:MetroWindow x:Class="VideoClub.WPF.Views.MainWindow"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
                 xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
                 xmlns:Dialog="clr-namespace:MahApps.Metro.Controls.Dialogs;assembly=MahApps.Metro"
                 Dialog:DialogParticipation.Register="{Binding}"
                 mc:Ignorable="d"
                 xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
                 xmlns:properties="clr-namespace:VideoClub.WPF.Properties"
                 Title="{x:Static properties:Resources.MAIN_TITLE}" Height="450" Width="800"
                 ResizeMode="NoResize" WindowStartupLocation="CenterScreen" Loaded="MainWindow_OnLoaded">

    <Controls:MetroWindow.RightWindowCommands>
        <Controls:WindowCommands>
            <Button Content="settings" />
            <Button Click="ButtonClientsWindows_OnClick">
                <StackPanel Orientation="Horizontal">
                    <iconPacks:PackIconModern Width="24" Height="24" Kind="User" />
                    <TextBlock Margin="4 0 0 0" VerticalAlignment="Center" Text="clientes" />
                </StackPanel>
            </Button>
            <Button Click="ButtonVideoGamesWindows_OnClick">
                <StackPanel Orientation="Horizontal">
                    <iconPacks:PackIconModern Width="24" Height="24" Kind="ControllerXbox" />
                    <TextBlock Margin="4 0 0 0" VerticalAlignment="Center" Text="games" />
                </StackPanel>
            </Button>
            <Button Click="ButtonMovieWindows_OnClick">
                <StackPanel Orientation="Horizontal">
                    <iconPacks:PackIconModern Width="24" Height="24" Kind="MovieClapper" />
                    <TextBlock Margin="4 0 0 0" VerticalAlignment="Center"  Text="movies" />
                </StackPanel>
            </Button>
        </Controls:WindowCommands>
    </Controls:MetroWindow.RightWindowCommands>

    <Grid HorizontalAlignment="Left" Height="422"  VerticalAlignment="Top" Width="795" Margin="0,0,-0.333,0">
        <Controls:Tile Title="Crear renta rápida" Click="StartRentalsWindows_OnClick"
                       Background="YellowGreen" ToolTip="Gestione todas las rentas"
                       HorizontalTitleAlignment="Center" Margin="40,36,428,246" Width="Auto">
            <iconPacks:PackIconModern Width="60"
                                      Height="60"
                                      Kind="InboxIn" />
        </Controls:Tile>
        <Controls:Tile Title="Crear devolución rápida" 
                       Background="Beige" ToolTip="Gestione todas las rentas"
                       HorizontalTitleAlignment="Center" Margin="428,36,41,246" Width="Auto" Click="FinishRentalsWindows_OnClick">
            <iconPacks:PackIconModern Width="60"
                                      Height="60"
                                      Kind="InboxOut" />
        </Controls:Tile>
        <Controls:Tile Title="VIP" Name="VipTile" Visibility="Hidden"
                       Background="PaleVioletRed" ToolTip="Gestione todas las rentas"
                       HorizontalTitleAlignment="Center" Margin="40,269,631,57" Width="Auto" Height="Auto">
            <iconPacks:PackIconModern Width="25"
                                      Height="25"
                                      Kind="UserTie" />
        </Controls:Tile>
        <Controls:Tile Title="Desactivación" Name="BlockedTile" Visibility="Hidden"
                       Background="BurlyWood" ToolTip="Verificar proceso de clientes bloqueados"
                       HorizontalTitleAlignment="Center" Margin="197,269,472,57" 
                       Click="BlockedTile_OnClick" Width="Auto" Height="Auto">
            <iconPacks:PackIconModern Width="25"
                                      Height="25"
                                      Kind="Noentry" />
        </Controls:Tile>
        <mah:ProgressRing Name="BlockedUserProgress" Foreground="{DynamicResource AccentColorBrush}"
                          IsActive="True" Margin="230,284,505,78" />
        <Label Content="Proceso manual para los clientes" HorizontalAlignment="Left"
               Margin="40,239,0,0" VerticalAlignment="Top" mah:ControlsHelper.ContentCharacterCasing="Upper"/>
        <mah:ProgressRing x:Name="VipUserProgress" Foreground="{DynamicResource AccentColorBrush}"
            IsActive="True" Margin="73,284,662,78" />
    </Grid>
</mah:MetroWindow>
